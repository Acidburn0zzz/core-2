{% extends '@ZikulaCoreInstaller/theme.html.twig' %}

{% block title __('Zikula is not installed!') %}

{% block body %}
<div class="container">
    <div id="cell">
        <div id="content">
            <div id="maincontent">
                <h1>{{ __("Zikula Application Framework") }}</h1>
                <h2>{{ __("Zikula Core is not installed!") }}</h2>
                <p>
                    {{ __f('You are seeing this message because Zikula is not yet installed. You can install Zikula by clicking
                    on the install button, but before doing so please read the %1$s. Further information can be found in the %2$s.',
                    {1: '<a href="%url%">%text%</a>' | replace({'%url%': url('doc'), '%text%': __('installation instructions') }),
                     2: '<a href="%url%">%text%</a>' | replace({'%url%': 'http://www.zikula.org', '%text%': __('online documentation') }) } ) | raw }}
                </p>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <a class="btn btn-success btn-lg btn-block" href="{{ url('install', {'stage': 'locale' }) }}">
                            <i class="fa fa-thumbs-up fa-3x pull-left"></i> {{ __("Install Zikula!") }}<br />{{ __('Version') }} {{ version }}
                        </a>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <p>
                    {{ __("Zikula is free software released under the GPL license!") }}<br />
                    {{ __('For more information, please visit <a href="http://zikula.org/" title="Zikula Homepage">http://zikula.org</a>.') | raw }}
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}