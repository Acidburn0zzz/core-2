{% extends '@ZikulaCoreInstaller/theme.html.twig' %}

{% block title __('Zikula is not upgraded!') %}

{% block body %}
<div class="container">
    <div id="cell">
        <div id="content">
            <div id="maincontent">
                <h1>{{ __("Zikula Application Framework") }}</h1>
                <h2>{{ __("Zikula Core is not upgraded!") }}</h2>
                <p>
                    {{ __f('You are seeing this message because Zikula has not yet been upgraded. You can upgrade Zikula by clicking
                    on the upgrade button, but before doing so please read the %1$s. Further information can be found in the %2$s.',
                    {1: '<a href="%url%">%text%</a>' | replace({'%url%': url('upgrade'), '%text%': __('upgrade instructions') }),
                     2: '<a href="%url%">%text%</a>' | replace({'%url%': 'http://www.zikula.org', '%text%': __('online documentation') }) } ) | raw }}
                </p>
                <noscript><p class="alert alert-warning">{{ __('You have JavaScript disabled. Please activate it to proceed or use the CLI script instead.') }}</p></noscript>
                <div id="upgradebutton" class="row" style="display:none;">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <a class="btn btn-success btn-lg btn-block" href="{{ url('upgrade', {'stage': 'init' }) }}">
                            <i class="fa fa-thumbs-up fa-3x pull-left"></i> {{ __("Upgrade Zikula!") }}<br />{{ __('To version') }} {{ version }}
                        </a>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <br />
                <p class="text-muted">
                    {{ __("Zikula is free software released under the GPL license!") }}<br />
                    {{ __('For more information, please visit <a href="http://zikula.org/" title="Zikula Homepage">http://zikula.org</a>.') | raw }}
                </p>
            </div>
        </div>
    </div>
</div>
    <script>
        <!--
        jQuery( document ).ready(function( $ ) {
            $('#upgradebutton').show();
        });
        //-->
    </script>
{% endblock %}