{% endspaceless %}
{%- endblock radio_row %}

{% block submit_row -%}
{% spaceless %}
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-9 {{ block('form_label_class') }}"></div>
        <div class="col-lg-offset-3 {{ block('form_group_class') }}">
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock submit_row %}

