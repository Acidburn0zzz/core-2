<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikulausersmodule.event_listener.class">Zikula\Module\UsersModule\Listener\CoreEventListener</parameter>
    </parameters>

    <services>
        <service id="zikulausersmodule.event_listener" class="%zikulausersmodule.event_listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="session" />
        </service>
    </services>
</container>

